{% extends 'layout.twig' %}

{% block body %}
<div class="flex justify-center items-center min-h-screen">
    <div class="bg-gray-800 p-6 rounded-lg shadow-lg w-full max-w-sm">
        <h1 class="text-2xl font-bold mb-4 text-center">Connexion Administrateur</h1>
        <form action="/admin-login" method="post" class="space-y-4">
            <div>
                <label for="password" class="block text-gray-300">Mot de passe :</label>
                <input type="password" id="password" name="password" required class="w-full p-2 mt-1 border border-gray-600 rounded bg-gray-700 text-gray-200">
            </div>
            <div class="text-center">
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Connexion</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
